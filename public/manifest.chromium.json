{
  "manifest_version": 3,
  "name": "The Link",
  "description": "Feeding Machines",
  "version": "0.0.1",
  "permissions": [
    "activeTab",
    "alarms",
    "storage",
    "tabCapture",
    "tabs",
    "unlimitedStorage",
    "webRequest",
    "offscreen"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "minimum_chrome_version": "92",
  "action": {
    "default_icon": {
      "16": "static/icon.png",
      "24": "static/icon.png",
      "32": "static/icon.png"
    },
    "default_title": "The Link",
    "default_popup": "index.html"
  },
  "content_security_policy": {
    "extension_pages": "default-src 'self'; worker-src 'self'; style-src 'self' 'unsafe-inline'; connect-src *; media-src *; script-src 'self' 'wasm-unsafe-eval'"
  },
  "icons": {
    "16": "static/icon.png",
    "48": "static/icon.png",
    "128": "static/icon.png"
  }
}
