{
  "manifest_version": 2,
  "name": "The Link",
  "description": "Feeding Machines",
  "version": "0.0.2",

  "background": {
    "scripts": ["background.js"]
  },
  "page_action": {
    "default_icon": "static/icon.png",
    "browser_style": true
  },
  "browser_action": {
    "default_title": "The Link",
    "default_popup": "index.html",
    "default_icon": {
      "128": "static/icon.png"
    }
  },
  "permissions": ["alarms", "storage", "unlimitedStorage"]
}
