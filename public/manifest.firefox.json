{
  "manifest_version": 2,
  "name": "Link",
  "description": "Feed The Machine",
  "version": "0.0.1",

  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "core.js"]
    }
  ],
  "page_action": {
    "default_icon": "icons/icon.png",
    "browser_style": true
  },
  "browser_action": {
    "default_title": "Link",
    "default_popup": "index.html",
    "default_icon": {
      "128": "icons/icon.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus",
    "alarms",
    "storage",
    "unlimitedStorage",
    "browsingData",
    "cookies",
    "dns",
    "downloads",
    "webRequest"
  ]
}
