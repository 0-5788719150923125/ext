{
  "manifest_version": 2,
  "name": "Wyrm",
  "description": "Feeding Machines",
  "version": "0.0.4",

  "background": {
    "scripts": ["background.js"]
  },
  "page_action": {
    "default_icon": "static/icon.png",
    "browser_style": true
  },
  "browser_action": {
    "default_title": "Wyrm",
    "default_popup": "popup.html",
    "default_icon": {
      "128": "static/icon.png"
    }
  },
  "permissions": ["alarms", "storage", "unlimitedStorage"],
  "content_security_policy": "default-src 'self'; worker-src 'self' blob; style-src 'self'; connect-src *; media-src *; script-src 'self' 'wasm-unsafe-eval' blob"
}
